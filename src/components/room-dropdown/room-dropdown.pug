include ../dropdown/dropdown

mixin room-dropdown(params = {})
  -
    const {
      title = 'dropdown',
      bedrooms = 1,
      beds = 1,
      bathrooms = 1,
      alwaysOpen = false,
      size = 'l',
    } = params;

    const newParams = {
      title: title,
      text: 'Сколько комнат',
      alwaysOpen: alwaysOpen,
      size: size,
      items: [
        {title: 'спальни', value: bedrooms},
        {title: 'кровати', value: beds},
        {title: 'ванные комнаты', value: bathrooms}
      ]
    }

  .room-dropdown.js-room-dropdown
    +dropdown(newParams)
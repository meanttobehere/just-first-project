{
  "env": {
    "browser": true,
    "jquery": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["**/lib/*"],
  "extends": [
    "airbnb-base"
  ],
  "rules": {
    "max-len": ["error", { "code": 81, "ignoreTemplateLiterals": true}],
    "linebreak-style": ["error", "windows"]
  }
}